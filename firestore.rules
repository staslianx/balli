rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Recipe memories - users can read their own, only Cloud Functions can write
    // Used by generateRecipeWithMemory Cloud Function for deduplication
    match /recipe_memories/{recipeId} {
      allow read: if request.auth != null
        && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }

    // Legacy recipe_memory collection (keeping for backward compatibility)
    match /recipe_memory/{recipeId} {
      allow read: if request.auth != null
        && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }

    // User recipe preferences (for future enhancement)
    match /user_recipe_preferences/{userId} {
      allow read, write: if request.auth != null
        && request.auth.uid == userId;
    }

    // User conversation sessions (for conversation tracking)
    match /recipe_conversations/{conversationId} {
      allow read, write: if request.auth != null
        && resource.data.userId == request.auth.uid;
    }

    // Helper function to check if user is authorized (serhat@balli or dilara@balli)
    function isAuthorizedUser() {
      return request.auth != null &&
             (request.auth.token.email == 'serhat@balli' ||
              request.auth.token.email == 'dilara@balli');
    }

    // Users collection - meal sync data
    match /users/{userId} {
      // User can only access their own user document
      allow read, write: if isAuthorizedUser() &&
                           request.auth.token.email == userId;

      // Meals subcollection for bidirectional sync
      match /meals/{mealId} {
        // Users can read/write their own meals
        allow read: if isAuthorizedUser() &&
                      request.auth.token.email == userId;

        allow create: if isAuthorizedUser() &&
                        request.auth.token.email == userId &&
                        request.resource.data.keys().hasAll(['id', 'timestamp', 'mealType', 'lastModified']) &&
                        request.resource.data.id is string &&
                        request.resource.data.timestamp is timestamp &&
                        request.resource.data.lastModified is timestamp;

        allow update: if isAuthorizedUser() &&
                        request.auth.token.email == userId &&
                        request.resource.data.lastModified is timestamp;

        allow delete: if isAuthorizedUser() &&
                        request.auth.token.email == userId;
      }
    }

    // Default rules for other collections - require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
